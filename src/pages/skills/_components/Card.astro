---
import { ArrowRight } from "@lucide/astro";

interface Props {
    title: string;
    description: string;
    link: string;
};

const { title, description, link } = Astro.props;
---

<a href={link}>
    <div class="flex flex-col w-70 h-50 bg-base-300 border-2 border-base-content rounded-2xl p-4 hover:bg-base-200 transition-colors">
        <section class="inline-flex w-full">
            <h3 class="text-secondary text-lg font-bold">{title}</h3>
            <ArrowRight class="inline-block ml-2" />
        </section>
        <section class="mt-2">
            <p>{description}</p>
        </section>
    </div>
</a>